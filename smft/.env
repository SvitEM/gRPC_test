# SMFT (Smart Manufacturing Test) Client Configuration
# Override these values as needed for your environment

# Target server
DF_HOST=localhost
DF_PORT=50051

# Load test parameters
N_RPS=2000
T_DURATION_SEC=60
T_WARMUP_SEC=10
CHANNEL_POOL_SIZE=4

# DF Server artificial delay (for latency calculation) - must match server setting
DF_DELAY_MS=40

# TLS Certificate paths (relative to container working directory)
TLS_CA=../df/certs/ca.crt
TLS_CERT=../df/certs/client.crt
TLS_KEY=../df/certs/client.key
